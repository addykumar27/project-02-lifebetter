      <div class="text">beauty</div>
    </div>
    <div class="col-sm-4">
      <%= link_to image_tag( 'exercise1.jpg') %>
    </div>
    <div class="middle">
      <div class="text">health</div>
    </div>
    <div class="col-sm-4">
      <%= link_to image_tag( 'food3.jpg') %>
    </div>
