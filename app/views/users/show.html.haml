-# Navbar Start

.container-fluid
  .row.profile
    .col-sm-3.col-md-3.col-lg-3
      .profile-sidebar
        -# User Title
        .profile-usertitle
          .profile-usertitle-name
            %a{:href => "#"}
              = @user.first_name
              = @user.last_name

          -# User Pic
          .profile-userpic
            %a{:href => "#"}
              = image_tag @user.avatar.url, class: "img-responsive" #size: "150x100" or (:medium)
              -# %img.img-responsive{:alt => "", :src => "https://files.slack.com/files-tmb/T0351JZQ0-F5HHG3EN4-7f9ab0f32e/seijin_480.png"}

          -# Menu
          .profile-usermenu
            %ul.nav.add_tip
              = link_to "Add New Tip", new_user_tip_path
            %ul.nav
              %li
                %a{:href => "#"}
                  Beauty
              %li
                %a{:href => "#", :target => "_blank"}
                  Creativity/Art
              %li
                %a{:href => "#"}
                  Fitness/Health
              %li
                %a{:href => "#"}
                  Food
              %li
                %a{:href => "#"}
                  Living/Apt/home
              %li
                %a{:href => "#"}
                  Travel
    .col-sm-9.col-md-9.col-lg-9.tipsbyyou
      %h1 TIPS by YOU!
      - @tips.each do |tip|
        .container-fluid.tips
          .row
            .col-sm-12.col-md-12.col-lg-12
              .usertip-title
                = tip.title
                .container-fluid.content
                  = tip.content
                .usertip-options.pull-right
                  = link_to 'delete_user_tip_path(@user.id, tip.id)', data: { confirm: "Are you sure you want to delete this tip?" }, method: :delete do
                    %span.glyphicon.glyphicon-remove
                  = link_to 'edit_user_tip_path(@user.id, tip.id)' do
                    %span.glyphicon.glyphicon-pencil
                .tip-timestamp.pull-right
                  = tip.created_at.strftime("%a, %b %d, %Y @ %l:%M %p")
