<html>
  <head>
    <title>Lifebetter</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <div class="jumbotron-small">
        <div class="logo-left">
          <%= link_to image_tag("redlogo.png", height: "50"), root_path %>
        </div>
        <div class="pull-right dropdown">
          <% if signed_in? %>
            <div class="dropbtn">
              Welcome, <%= current_user.first_name%>
              <%= image_tag("dropdown.png", height: "30") %>
            </div>
            <div class="dropdown-content">
              <%= link_to "View Profile", user_path(current_user) %>
              <%= link_to "Settings", edit_user_registration_path(current_user) %>
              <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
            </div>
          <% else %>
            <%= button_to "Sign In", new_user_session_path %>
            <%= button_to "Sign Up", new_user_registration_path, :method => :get %>
          <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer>
      <div class="footer">
        <ul>
          <li>
            <%= link_to "ABOUT", about_path %>
          </li>
          <li>CONTACT US</li>
          <li>JJAM x GA 2017 / all rights reserved</li>
        </ul>
        <div class="pull-right">
          <%= image_tag('logo.png', height: '50') %>
        </div>
      </div>
    </footer>
  </body>
</html>
