    </div>
    <div class="col-sm-4">
      <%= link_to image_tag( 'home4.jpg') %>
    </div>
    <div class="middle">
      <div class="text">home</div>
    </div>
    <div class="col-sm-4">
      <%= link_to image_tag( 'travel1.jpg') %>
    </div>
    <div class="middle">
      <div class="text">travel</div>
    </div>
  </div>

  <div class="formgroup">
    <div class="col-m-12">
      <input placeholder="Title" type="text" name="" value="">
    </div>
    <div class="col-m-12">
      <input placeholder="Genre" type="text" name="" value="">
    </div>
    <div class="col-m-12">
      <input placeholder="Add your tip! (10,000 words max.)" type="text" name="" value="">
